<h1>Bienvenido a las mejores fondas ONLINE</h1>

<%= link_to 'Nueva fonda', new_fonda_path %>

<h3>Busca tu fonda!</h3>

<%= form_tag(root_path, method: 'get') do %>
    <%= text_field_tag :name, nil, placeholder: 'nombre fonda' %>
    <%= submit_tag 'Buscar' %>
    <%= submit_tag 'Limpiar' %>
<% end %>

<table>
    <thead>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Plato Fuerte</th>
    </thead>
    <tbody>
        <% @fondas.each do |fonda| %>
          <tr>
              <td><%= fonda.name %></td>
              <td><%= fonda.address %></td>
              <td><%= fonda.food %></td>
              <td><%= link_to 'ver', fonda_path(fonda.id) %></td>
              <td><%= link_to 'borrar', fonda, method: 'delete', data:{ confirm: 'estas seguro?' } %></td>
          </tr>
        <%end%>
    </tbody>
</table>